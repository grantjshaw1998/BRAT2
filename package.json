{
  "name": "bible-research-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "upload-books": "tsx scripts/uploadBibleBooks.ts",
    "upload-sample-verses": "tsx scripts/uploadSampleVerses.ts",
    "setup-bible": "npm run upload-books && npm run upload-sample-verses",
    "check-db": "tsx scripts/checkDatabase.ts",
    "export-db": "tsx scripts/exportDatabase.ts",
    "create-archive": "tsx scripts/createProjectArchive.ts",
    "download-all": "npm run export-db && npm run create-archive"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.39.0",
    "@types/node": "^24.1.0",
    "@types/papaparse": "^5.3.16",
    "@types/react-router-dom": "^5.3.3",
    "@types/uuid": "^10.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.263.1",
    "papaparse": "^5.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.7.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.14",
    "dotenv": "^17.2.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "tsx": "^4.20.3",
    "typescript": "^5.0.2",
    "vite": "^5.4.8"
  }
}
